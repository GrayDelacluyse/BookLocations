<div>@ViewBag.Message</div>

@using (Html.BeginForm("CSV", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="file" name="file" />
    <input type="submit" value="OK" />
}

@if (Model != null)
{
    foreach (var item in Model)
    {
    <div class="row itemWrapper">
        <div class="Author col-md-2">
            @item.Author
        </div>
        <div class="Title col-md-2">@item.Title</div>
        <div class="locationsWrapper col-md-3">
            @foreach (var location in item.Locations)
            {
                <div class="Location">@location.name</div>
            }
        </div>
        <div class="ErrorMessage col-md-5">@item.ErrorMessage</div>
    </div>
    }
}